{
  "presets": [
    "react",
    ["es2015", { "modules": false }],
    "stage-0",
    "stage-1",
    "stage-2",
    "stage-3"
  ],
  "env": {
    "dev": {
      "plugins": [
        [
          "react-transform",
          {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              }
            ]
          }
        ]
      ]
    }
  }
}
